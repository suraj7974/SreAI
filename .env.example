# =============================================================================
# GOOGLE GEMINI AI CONFIGURATION (REQUIRED)
# =============================================================================
# Get your free API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-2.0-flash-exp
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# =============================================================================
# PROMETHEUS & GRAFANA MONITORING
# =============================================================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-me-in-production
ALERTMANAGER_URL=http://alertmanager:9093

# =============================================================================
# TARGET VMs - Node Exporter endpoints to monitor
# =============================================================================
# Comma-separated list of host:port (default port is 9100)
# Example: 192.168.1.10:9100,192.168.1.11:9100
TARGET_NODE_EXPORTERS=node-exporter:9100

# =============================================================================
# SSH CONFIGURATION (For remediation actions)
# =============================================================================
SSH_USER=sre-agent
SSH_KEY_PATH=/app/ssh/id_ed25519
SSH_PORT=22

# Target VM for SSH remediation
VM_HOST=your-vm-ip-here
VM_PORT=22
VM_USER=sre-agent
VM_KEY_PATH=/app/ssh/id_ed25519

# =============================================================================
# API SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
API_AUTH_TOKEN=generate-a-secure-token-here

# =============================================================================
# STORAGE
# =============================================================================
INCIDENT_STORAGE_PATH=./incidents

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# SLACK INTEGRATION (OPTIONAL)
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=sre-alerts

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# AGENT BEHAVIOR CONFIGURATION
# =============================================================================
MONITOR_INTERVAL=60

# Anomaly detection thresholds (percentage)
CPU_THRESHOLD_WARNING=70
CPU_THRESHOLD_CRITICAL=90
MEMORY_THRESHOLD_WARNING=70
MEMORY_THRESHOLD_CRITICAL=85
DISK_THRESHOLD_WARNING=70
DISK_THRESHOLD_CRITICAL=85

# Require human approval before executing remediation (recommended: true)
REQUIRE_HUMAN_APPROVAL=true
AUTO_DIAGNOSE=true
